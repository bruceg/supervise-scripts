#!/bin/sh
usage $# 1 1 service

svc="$1"

svc-stop "$svc"

if ! [ -L "$svc" ]; then
  fatal "Service '$svc' is not symlinked into /service and can't be removed."
fi

# Remove the symlink without loosing track of where it points to
cd "$svc"
rm ${SVSCANDIR-/service}/"$svc"

# Stop the supervise tasks
if [ -d log ]; then
  svc -dx log
fi
svc -dx .
