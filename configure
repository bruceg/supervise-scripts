#!/bin/sh

expr=""

case `echo 'a\c'` in
  'a\c')
    echo 'Using echo -n'
    perl='s/echon "([^"]*)"/echo -n "\1"/; s/echon ([^;]*)/echo -n \1/'
    ;;
  'a')
    echo 'Using echo \\c'
    perl='s/echon "([^"]*)"/echo "\1\c"/; s/echon ([^;]*)/echo \1\\c/'
    ;;
  *)
    echo "Unrecognized output from echo!"
    exit 1
    ;;
esac

process() {
  {
    sed -e "s/%PROGRAM%/$2/g" template.sh
    tail +2 $1 | perl -p -e "$perl"
  } >$2
  chmod +x $2
}

for file in "$@"; do
  out=`basename $file .in`
  file=$out.in
  if ! [ -e $file ]; then
    echo "configure: Skipping missing file '$file'"
  else
    echo "Processing $file -> $out"
    process $file $out
  fi
done
