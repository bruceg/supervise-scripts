#!/bin/sh
set -e
if [ "$1X" = X ]; then
	echo usage: svc-stop service
	exit 1
fi

echon "Stopping $1: "
cd ${SVSCANDIR-/service}

stop() {
  touch "$1"/down
  if svc-isup "$1"; then
    svc -d "$1"
    if svc-waitdown "$1"; then
      echon " $1"
    else
      echo " Failed!"
      exit 1
    fi
  else
    echon " $1 (already down)"
  fi
}

stop "$1"

if [ -d "$1/log" ]; then
  stop "$1/log"
fi

echo " done."

if [ -L "$1" ]; then
  link="`readlink "$1"`"
  rm -f "$1"
  if [ -d "$link" ]; then
    svc -dx "$link"
    echon " supervise"
  fi
fi

echo " done."
